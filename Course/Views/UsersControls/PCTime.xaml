<UserControl x:Class="Course.Views.UsersControls.PCTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Course.Views.UsersControls"
             mc:Ignorable="d" Margin="0" Padding="0">

    <Viewbox Margin="0">
        <WrapPanel Margin="0">
            <Label FontSize="24" Content="{StaticResource fa_clock}" Style="{DynamicResource Label_fontawersome}"/>
            
            <Label x:Name="Hour" Content="{Binding Hour}" Padding="0,0,5,0" Foreground="{StaticResource DefaultColor}" VerticalContentAlignment="Bottom" FontSize="{StaticResource FontSizeTitle}"/>
            <Label x:Name="Dot" Content="{Binding Dot}" Width="5" Padding="0" Margin="0" Foreground="{StaticResource DefaultColor}"  VerticalContentAlignment="Bottom" FontSize="{StaticResource FontSizeTitle}"/>
            <Label x:Name="Minute" Content="{Binding Minute}" Padding="3,0,0,0" Margin="0"  Foreground="{StaticResource DefaultColor}"  VerticalContentAlignment="Bottom" FontSize="{StaticResource FontSizeTitle}"/>
        </WrapPanel>
    </Viewbox>
</UserControl>
