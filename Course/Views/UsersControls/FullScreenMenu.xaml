<UserControl x:Class="Course.Views.UsersControls.FullScreenMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Course.Views.UsersControls"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" x:Name="scrollViewer">
        <WrapPanel x:Name="FullMenu" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 10" />
    </ScrollViewer>

</UserControl>
